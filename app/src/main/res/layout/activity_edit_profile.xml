<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/Background"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".EditProfileActivity">

    <TextView
        android:id="@+id/tvMemberInfo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="MEMBER INFORMATION"
        android:textColor="@color/Blue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vBreak4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/Grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="45dp"
                    app:srcCompat="@drawable/imgprofileicon" />

                <TextView
                    android:id="@+id/lbl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:text="Personal Information"
                    android:textColor="@color/Blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="First Name"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etFName"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="First Name"
                    android:textColorHint="@color/Grey"
                    android:inputType="text|textPersonName" />

                <TextView
                    android:id="@+id/tvMName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Middle Name"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etMName"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Middle Name"
                    android:textColorHint="@color/Grey"
                    android:inputType="text|textPersonName" />

                <TextView
                    android:id="@+id/tvLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Last Name"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etLName"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Last Name"
                    android:textColorHint="@color/Grey"
                    android:inputType="text|textPersonName" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Address"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etAddress"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Address"
                    android:textColorHint="@color/Grey"
                    android:inputType="text|textPersonName" />

                <TextView
                    android:id="@+id/tvBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Birthday"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/etBirthday"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:ems="10"
                    android:hint="Birthday"
                    android:textColorHint="@color/Grey"
                    android:textSize="16sp"
                    android:inputType="text|textPersonName"/>

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Gender"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textColor="@color/Blue"/>


                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textColor="@color/Blue"/>

                    <RadioButton
                        android:id="@+id/rbOthers"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Others"
                        android:textColor="@color/Blue"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/tvCivil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Civil Status"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgCivil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbSingle"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Single"
                        android:textColor="@color/Blue"/>

                    <RadioButton
                        android:id="@+id/rbMarried"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Married"
                        android:textColor="@color/Blue"/>

                    <RadioButton
                        android:id="@+id/rbDivorced"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Divorced"
                        android:textColor="@color/Blue"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:text="Workout Plan"
                    android:textColor="@color/Red"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHeightLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Height"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/llHeightEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/etHeightValueFeet"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:ems="10"
                        android:hint="Feet"
                        android:textColorHint="@color/Grey"
                        android:inputType="text|textPersonName"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/etHeightValue2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:ems="10"
                        android:hint="ft."
                        android:textColorHint="@color/Grey"
                        android:inputType="text|textPersonName"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/etHeightValueInches"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:ems="10"
                        android:hint="Inches"
                        android:textColorHint="@color/Grey"
                        android:inputType="text|textPersonName"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/etHeightValue4"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:ems="10"
                        android:hint="in."
                        android:textColorHint="@color/Grey"
                        android:inputType="text|textPersonName"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvWeightLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Weight"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/llWeightValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/etWeightValue"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:ems="10"
                        android:hint="Weight"
                        android:textColorHint="@color/Grey"
                        android:inputType="text|textPersonName"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/etWeightValue2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:ems="10"
                        android:hint="Weight"
                        android:inputType="text|textPersonName"
                        android:text="lbs"
                        android:textAlignment="textEnd"
                        android:textColor="#000000"
                        android:textColorHint="@color/Grey"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="Fitness Goal"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgFitnessGoal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbWeightLoss"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Weight Loss"
                        android:textColor="@color/Blue"/>

                    <RadioButton
                        android:id="@+id/rbMuscleGain"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Muscle Gain"
                        android:textColor="@color/Blue"/>

                    <RadioButton
                        android:id="@+id/rbOverall"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Overall"
                        android:textColor="@color/Blue"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/tvFitnessLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="Fitness Level"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgFitnessLevel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbBeginner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Beginner"
                        android:textColor="@color/Blue"/>

                    <RadioButton
                        android:id="@+id/rbInter"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Intermediate"
                        android:textColor="@color/Blue"/>

                    <RadioButton
                        android:id="@+id/rbAdvanced"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Advanced"
                        android:textColor="@color/Blue"/>
                </RadioGroup>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnEditSave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Save" />
    </LinearLayout>

</LinearLayout>